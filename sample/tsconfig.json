{
  "include": ["src/**/*"],
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "ESNext",
    "noEmit": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "ES2020"],
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true
  }
}
